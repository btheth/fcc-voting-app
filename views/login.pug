include ./headers.pug
	
#main
	center
		h1 Login
		
		-if(message.length)
			.alert.alert-danger #{message}
				
		form(action='login' method='post')
			.form-group
				label Username
				input.form-control(type='text' name='username')
			.form-group
				label Password
				input.form-control(type='password' name='password')
			button.btn.btn-success.btn-lg(type='submit') Login

script(type='text/javascript' src='/public/js/headers.client.js')